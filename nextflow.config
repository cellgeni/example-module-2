// nextflow flags
nextflow.enable.moduleBinaries = true

// workflow parameters
params {
    filelist = null
    publish_mode = 'copy'
    output_dir = 'results'
}

// Load config from modules
includeConfig 'modules/example2/module.config'
includeConfig 'modules/example1/modules/example1/module.config'

// Executor configuration
executor {
    name           = 'lsf'
    perJobMemLimit = true
}

// Unscoped options
outputDir = params.output_dir
cleanup   = true
workDir   = "nf-work"